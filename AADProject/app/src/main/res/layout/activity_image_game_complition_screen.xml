<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_image_game_complition_screen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="10dip"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rebecca.aadproject.ImageGameCompletionScreen">

    <Button
        android:text="Play Again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/ImageComplitionPlayAgain"
        android:textSize="@dimen/Font"
        android:textAllCaps="false"/>

    <TextView
        android:text="45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fontScore"
        android:textColor="@android:color/background_dark"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/imageCompletionScore"
        android:layout_alignStart="@+id/imageCompletionScore"
        android:id="@+id/imageComplitionAverage" />

    <TextView
        android:text="50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageCompletionScore"
        android:textSize="@dimen/fontScore"
        android:textColor="@android:color/background_dark"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageComplitionQuit"
        android:textSize="@dimen/Font"
        android:textAllCaps="false"/>

    <TextView
        android:text="Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="@dimen/Font"
        />

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="@dimen/graphHeight"
        android:id="@+id/imageCompletionGraph"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/imageComplitionAverage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="New Average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="@dimen/Font"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/imageCompletionScore"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="View Wrong Answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageComplitionWrong"
        android:textSize="@dimen/Font"
        android:textAllCaps="false"
        android:layout_below="@+id/imageCompletionGraph"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
