<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tutorial_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rebecca.aadproject.TutorialScreen">

    <TextView
        android:text="Tutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="@dimen/fontGeneral"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"/>

    <Button
        android:text="Proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/proceed"
        android:textSize="@dimen/fontGeneral"
        android:textAllCaps="false"
        />

    <TextView
        android:text="2."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/step2"
        android:textSize="@dimen/fontSmall"
        android:layout_below="@+id/step1"
        android:layout_alignLeft="@+id/step1"
        android:layout_alignStart="@+id/step1"
        android:layout_alignRight="@+id/step1"
        android:layout_alignEnd="@+id/step1"
        android:textColor="@android:color/black"/>

    <TextView
        android:text="4."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:id="@+id/step4"
        android:textSize="@dimen/fontSmall"
        android:textColor="@android:color/black"
        android:layout_below="@+id/step3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="1."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:id="@+id/step1"
        android:textSize="@dimen/fontSmall"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="3."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/step3"
        android:textSize="@dimen/fontSmall"
        android:textColor="@android:color/black"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/step2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
