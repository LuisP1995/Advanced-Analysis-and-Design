<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tutorial_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rebecca.aadproject.TutorialScreen">

    <TextView
        android:text="Tutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="1."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="28dp"
        android:id="@+id/step1"
        android:textSize="24sp"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:text="Proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/proceed" />

    <TextView
        android:text="4."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/step4"
        android:textSize="24sp"
        android:layout_below="@+id/TutImg3"
        android:layout_alignLeft="@+id/step3"
        android:layout_alignStart="@+id/step3"
        android:layout_alignRight="@+id/step3"
        android:layout_alignEnd="@+id/step3" />

    <TextView
        android:text="3."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/step3"
        android:textSize="24sp"
        android:layout_alignTop="@+id/TutImg3"
        android:layout_alignLeft="@+id/step2"
        android:layout_alignStart="@+id/step2"
        android:layout_alignRight="@+id/step2"
        android:layout_alignEnd="@+id/step2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/TutImg4"
        android:layout_alignTop="@+id/step4"
        android:layout_alignLeft="@+id/proceed"
        android:layout_alignStart="@+id/proceed"
        android:layout_marginTop="14dp" />

    <TextView
        android:text="2."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/step2"
        android:textSize="24sp"
        android:layout_below="@+id/step1"
        android:layout_alignLeft="@+id/step1"
        android:layout_alignStart="@+id/step1"
        android:layout_alignRight="@+id/step1"
        android:layout_alignEnd="@+id/step1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/TutImg2"
        android:layout_alignTop="@+id/step2"
        android:layout_alignLeft="@+id/TutImg3"
        android:layout_alignStart="@+id/TutImg3"
        android:layout_marginTop="9dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/TutImg3"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/TutImg2"
        android:layout_alignLeft="@+id/TutImg4"
        android:layout_alignStart="@+id/TutImg4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/TutImg1"
        android:layout_alignTop="@+id/step1"
        android:layout_alignLeft="@+id/TutImg2"
        android:layout_alignStart="@+id/TutImg2" />

</RelativeLayout>
