<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sequence_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rebecca.aadproject.SequenceScreen">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/seqImg1"
        android:scaleType="centerCrop"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/seqImg2"
        android:scaleType="centerCrop"
        android:layout_alignTop="@+id/seqImg1"
        android:layout_toRightOf="@+id/seqImg1"
        android:layout_toEndOf="@+id/seqImg1"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/seqImg3"
        android:scaleType="centerCrop"
        android:layout_below="@+id/seqImg1"
        android:layout_alignLeft="@+id/seqImg1"
        android:layout_alignStart="@+id/seqImg1"
        android:layout_marginTop="31dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/seqImg4"
        android:scaleType="centerCrop"
        android:layout_alignTop="@+id/seqImg3"
        android:layout_alignLeft="@+id/seqImg2"
        android:layout_alignStart="@+id/seqImg2" />

    <Button
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seqImg4"
        android:layout_alignLeft="@+id/seqImg4"
        android:layout_alignStart="@+id/seqImg4"
        android:layout_marginTop="59dp"
        android:id="@+id/seqStartButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/blackstar"
        android:layout_below="@+id/seqStartButton"
        android:layout_alignLeft="@+id/seqImg3"
        android:layout_alignStart="@+id/seqImg3"
        android:layout_marginTop="25dp"
        android:id="@+id/starimage" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/greensqr"
        android:layout_alignTop="@+id/starimage"
        android:layout_alignRight="@+id/seqImg3"
        android:layout_alignEnd="@+id/seqImg3"
        android:id="@+id/imageView4" />


</RelativeLayout>
