<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_image_game_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rebecca.aadproject.ImageGameScreen">

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageGamePic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="269dp"
        android:id="@+id/wordBtn1"
        android:textSize="36sp" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/wordBtn1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="81dp"
        android:layout_marginEnd="81dp"
        android:id="@+id/wordBtn2"
        android:textSize="36sp" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/wordBtn3"
        android:layout_alignRight="@+id/wordBtn2"
        android:layout_alignEnd="@+id/wordBtn2"
        android:id="@+id/wordBtn4"
        android:textSize="36sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/imageRoundText"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignLeft="@+id/wordBtn2"
        android:layout_alignStart="@+id/wordBtn2"
        android:textSize="24sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageScoreText"
        android:layout_below="@+id/imageRoundText"
        android:layout_alignLeft="@+id/imageRoundText"
        android:layout_alignStart="@+id/imageRoundText"
        android:layout_marginTop="35dp"
        android:layout_alignRight="@+id/imageRoundText"
        android:layout_alignEnd="@+id/imageRoundText"
        android:textSize="24sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="54dp"
        android:id="@+id/imageGamePic"
        android:layout_below="@+id/imageScoreText"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:id="@+id/wordBtn3"
        android:textSize="36sp"
        android:layout_below="@+id/wordBtn1"
        android:layout_alignLeft="@+id/wordBtn1"
        android:layout_alignStart="@+id/wordBtn1" />
</RelativeLayout>
